<Window x:Class="SubjectTesting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SubjectTesting"
        mc:Ignorable="d"
        Title="Таҳлили метрикаи TF-IDF барои китобҳои дарсӣ" Height="450" Width="800">
    <DockPanel>
        <Button DockPanel.Dock="Top" Content="Ҳисоб"  Width="200" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10" Command="{Binding Start}"/>
        <DataGrid AutoGenerateColumns="False" Margin="10" Grid.Column="2" ItemsSource="{Binding Words}">
            <DataGrid.Columns>
                <DataGridTextColumn  Binding="{Binding Word}" Header="Калима" />
                <DataGridTextColumn  Binding="{Binding TF}" Header="TF" />
                <DataGridTextColumn  Binding="{Binding IDF}" Header="IDF" />
                <DataGridTextColumn  Binding="{Binding TF_IDF}" Header="TF-IDF" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
